                         <PropertyColumn Property="x => x.Quantity" IsEditable="true" Title="Colaboración" Format="N2" Culture="@(new CultureInfo("en-US"))" Class="mud-col-lg-6 mud-col-md-8">
                         </PropertyColumn> />
                     </Columns>
                     <PagerContent>
                         <MudDataGridPager T="CollaborativeDemandDTO" />
                     </PagerContent>
                 </MudDataGrid>
